<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>All Uploads</h1>
      <p><%= link_to "New Upload", new_upload_path %></p>
      
      <% for upload in @uploads %>
      <div class="col-md-4" style="height:250px">
         <%= image_tag upload.image_url(:thumb) if upload.image? %>
        <p>
          <%= link_to upload.title, upload %> | <%= link_to 'Edit', edit_upload_path(upload) %> | <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %> 
          
        </p>  
      </div>
    <% end %>
    </div>
  </div>
</div>
